<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:orientation="vertical">

    <include
        layout="@layout/layout_feed_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_main_retweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_feed_retweet_stroke"
        android:padding="6dp">

        <TextView
            android:id="@+id/tv_main_retweet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/linkText"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_main_retweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_main_retweet_name"
            android:layout_marginTop="7dp"
            android:lineSpacingMultiplier="1.3"
            android:text="retweet"
            android:textSize="15sp"/>
    </RelativeLayout>
</LinearLayout>