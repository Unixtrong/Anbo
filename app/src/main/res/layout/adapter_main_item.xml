<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

    <ImageView
        android:id="@+id/iv_main_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/tv_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_main_date"
        android:layout_alignTop="@+id/iv_main_avatar"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_main_avatar"
        android:text="name"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_main_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_main_avatar"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_main_avatar"
        android:text="date"
        android:textColor="#939393"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_main_avatar"
        android:paddingTop="10dp"
        android:text="content"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/rl_main_retweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_main_content"
        android:layout_marginTop="5dp"
        android:background="#EEEEEE"
        android:padding="6dp">

        <TextView
            android:id="@+id/tv_main_retweet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_main_retweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_main_retweet_name"
            android:layout_marginTop="7dp"
            android:text="retweet"
            android:textSize="15sp"/>
    </RelativeLayout>
</RelativeLayout>